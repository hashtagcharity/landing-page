@import 'nib'
@import 'jeet'
@import 'rupture'

enable-em-breakpoints = true

body, html
	padding 0
	margin 0
	font-size 100%
	height 100%
	width 100%
	min-width 100%
	min-height 100%
	-webkit-font-smoothing antialiased

.horizontal_center_panel
	display block
	margin-left auto
	margin-right auto

.center_panel
	margin auto
	position absolute
	top 0
	left 0
	bottom 0
	right 0

input
	padding-left 10px
	padding-right 10px

input[type="checkbox"]
	margin-left 5px
	margin-right 5px

.block
	display block
	float left

.c_button
	cursor pointer
	padding 10px 40px 10px 40px!important
	border-radius 2px
	cursor pointer
	-webkit-font-smoothing subpixel-antialiased
	letter-spacing 8px
	border-radius 3px

.c_button_small
	cursor pointer
	padding 5px 5px 5px 5px!important
	border-radius 2px
	cursor pointer
	-webkit-font-smoothing subpixel-antialiased
	letter-spacing 8px
	border-radius 3px

.c_vertical_button
	cursor pointer
	padding 10px 0px 10px 0px!important
	border-radius 2px
	cursor pointer
	-webkit-font-smoothing subpixel-antialiased
	letter-spacing 8px
	border-radius 3px
