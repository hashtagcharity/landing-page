a
	color inherit

a:hover
	cursor pointer
	text-decoration none

a:link
	color inherit
	text-decoration none

a:visited
	text-decoration none

a:active
	text-decoration none

a.disabledLink
	opacity 0.5
	pointer-events none
	cursor default

.text-center
	text-align center

.text-left
	text-align left

.text-right
	text-align right

.text-justify
	text-align justify !important

.fill
	width 100%
	min-width 100%
	height 100%
	min-height 100%


.fill-vertical
	display block
	height 100%
	min-height 100%

.fill-horizontal
	display block
	width 100%
	min-width 100%

.hide
	display none
