@require '../../abstract/styles/spacing'
@require '../../abstract/styles/colors'
@require '../../abstract/styles/appearance'
@require '../../abstract/styles/design'
@require '../../abstract/styles/fonts'

.workspace
	max-width 1800px
	margin-left auto
	margin-right auto
	height 100%
	position relative
	overflow-x hidden
	-webkit-overflow-scrolling touch
	center(100%)

.title, .featuredMissions, .missions, .tuned, .footer
	center(100%)
	overflow hidden


for index in (0..8) // 24em 36em 48em, 60em, 72em, 84em, 96em, 108em, 120em
	size = 24em + index * 12em
	scale = index / 8.0
	@media only screen and (min-width: size )
		.band
			height (24.0rem * scale + 14.0rem)

		.bandLine
			height (20.0rem * scale + 12.0rem)

		.band-wide
			height (32.0rem * scale + 20.0rem)

		.bandLine-wide
			height (28.0rem * scale + 18.0rem)

		.band-small
			height (18.0rem * scale + 5.0rem)

		.bandLine-small
			height (16.0rem * scale + 4.0rem)

.band, .band-wide, .band-small
	position relative
	padding 0 15px

.bandLine, .bandLine-wide, .bandLine-small
	position absolute
	margin auto
	top 0
	left 0
	bottom 0
	right 0

.columns-4
	column(3/12)
	line-height 2rem

.featured
	center(100%)

.bubble_dark_navigation
	color c_light_gray
	padding 15px

.bubble_dark_navigation:hover
	color c_dark_gray

.tuned-panel
	padding 0 25px

.stick_left
	position absolute
	top 50%
	left 0px
	z-index 2

.stick_right
	position absolute
	top 50%
	right 0px
	z-index 2


.columns-9
	column(3/4)

.columns-3
	column(1/4)

.footer
	center(100%)
	column(1/1)

.left
	float left

.right
	float right

.logo
	width 200px
	height 35px
	image '/media/charity_logo.png'
	padding 10px 50px

.menu
	margin 15px 50px




.img-center
	background-repeat no-repeat
	background-position center
	background-size contain

.img-fill
	background-repeat no-repeat
	background-position center
	background-size cover

