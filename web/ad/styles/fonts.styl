.font-bold
	font-weight 900

.font-normal
	font-weight 400

.font-light
	font-weight 100

.shadowed
	text-shadow 0px 0px 10px rgba(0, 0, 0, 1)

.h0
	font-size 3.0rem
h1, .h1
	font-size 2.125rem
h2, .h2
	font-size 1.625rem
h3, .h3
	font-size 1.375rem
h4, .h4
	font-size 1.125rem
h5, .h5
	font-size 1.125rem
h6, .h6
	font-size 1.125rem
.hN
	font-size 1.0rem
.hS
	font-size 0.85rem
.hM
	font-size 0.6rem

for index in (0..8) // 24em 36em 48em, 60em, 72em, 84em, 96em, 108em, 120em
	size = 24em + index * 12em
	scale = index / 8.0
	@media only screen and (min-width: size )
		.h0
			font-size (2.5rem * scale + 3.0rem)
		h1, .h1
			font-size (2.0rem * scale + 2.125rem)
		h2, .h2
			font-size (1.75rem * scale + 1.625rem)
		h3, .h3
			font-size (1.5rem * scale + 1.375rem)
		h4, .h4
			font-size (1.25rem * scale + 1.125rem)
		h5, .h5
			font-size (1.0rem * scale + 1.125rem)
		h6, .h6
			font-size (0.75rem * scale + 1.125rem)
		.hN
			font-size (0.5rem * scale + 1.0rem)
		.hS
			font-size (0.25rem * scale + 0.85rem)
		.hM
			font-size (0.15rem * scale + 0.6rem)
